{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "out",
		"rootDir": "src",
		"lib": [ "es2020", "DOM" ],
        "skipLibCheck": true,
		"sourceMap": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
}