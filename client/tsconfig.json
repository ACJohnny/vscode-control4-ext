{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "ES2019"
        ],
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "./node_modules/**",
        ".vscode-test",
        "./svelte/**",
        "resources"
    ]
}