{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "out",
		"rootDir": "src",
		"lib": [ "es2020",  "DOM" ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
		"sourceMap": true
	},
	"exclude": [
		"test",
        "node_modules",
        "src/svelte",
        "src/resources"
	]
}