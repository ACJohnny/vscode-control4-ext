{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for Control4 connections",
  "definitions": {
    "connection": {
      "type": "object",
      "properties": {
        "total": {
          "type": "integer"
        },
        "id": {
          "type": "integer",
          "oneOf": [
            {"minimum": 1, "maximum": 999, "description": "Control"},
            {"minimum": 1000, "maximum": 1099, "description": "Video Input"},
            {"minimum": 2000, "maximum": 2999, "description": "Video Output"},
            {"minimum": 3000, "maximum": 3099, "description": "Audio Input"},
            {"minimum": 4000, "maximum": 4999, "description": "Audio Output"},
            {"minimum": 5000, "maximum": 5999, "description": "Proxy"},
            {"minimum": 6000, "maximum": 6999, "description": "Network"},
            {"minimum": 7000, "maximum": 7999, "description": "Room"},
            {"minimum": 8000, "maximum": 8999, "description": "Power Manager"},
            {"minimum": 9000, "maximum": 9999, "description": "Device Network"}
          ]
        },
        "proxybindingid": {
          "type": "integer"
        },
        "facing": {
          "type": "integer",
          "oneOf": [
            {"const": 0, "description": "Front"},
            {"const": 1, "description": "Back"},
            {"const": 2, "description": "Top"},
            {"const": 3, "description": "Bottom"},
            {"const": 4, "description": "Left"},
            {"const": 5, "description": "Right"},
            {"const": 6, "description": "Unknown"}
          ]
        },
        "connectionname": {
          "type": "string"
        },
        "type": {
          "type": "integer",
          "oneOf": [
            {"const": 1, "description": "Control"},
            {"const": 2, "description": "Proxy"},
            {"const": 3, "description": "Audio/Video"},
            {"const": 4, "description": "Network"},
            {"const": 5, "description": "Video"},
            {"const": 6, "description": "Audio"},
            {"const": 7, "description": "Room"}
          ],
          "description": "Type of connection",
          "minimum": 1,
          "maximum": 7
        },
        "consumer": {
          "type": "boolean"
        },
        "audiosource": {
          "type": "boolean"
        },
        "videosource": {
          "type": "boolean"
        },
        "linelevel": {
          "type": "boolean"
        },
        "idautobind": {
          "type": "integer"
        },
        "hidden": {
          "type": "boolean"
        },
        "nobindingkey": {
          "type": "string"
        },
        "classes": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "classname": {
                  "type": "string"
                },
                "ports": {
                  "type": "array",
                  "items": [
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "number": {
                          "type": "integer"
                        },
                        "auto_connect": {
                          "type": "boolean"
                        },
                        "monitor_connection": {
                          "type": "boolean"
                        },
                        "keep_connection": {
                          "type": "boolean"
                        },
                        "keep_alive": {
                          "type": "boolean"
                        },
                        "delimeter": {
                          "type": "string"
                        },
                        "certificate": {
                          "type": "string"
                        },
                        "private_key": {
                          "type": "string"
                        },
                        "cacert": {
                          "type": "string"
                        },
                        "verify_mode": {
                          "type": "string"
                        },
                        "method": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "number"
                      ]
                    }
                  ]
                },
                "autobind": {
                    "type": "boolean"
                }
              },
              "required": [
                "classname"
              ]
            }
          ]
        }
      },
      "required": [
        "id",
        "connectionname",
        "type",
        "consumer",
        "classes"
      ]
    }
  },
  "type": "array",
  "minItems": 0,
  "uniqueItems": true,
  "items": {
    "allOf": [
      {
        "$ref": "#/definitions/connection"
      }
    ]
  }
}