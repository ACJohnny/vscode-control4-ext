{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for Control4 default and experience icons",
  "definitions": {
    "experienceicons": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "id": {
          "description": "The ID of the icon",
          "type": "string"
        },
        "type": {
          "id": "propertyType",
          "type": "string",
          "enum": [
            "Default_Icon",
            "State_Icon"
          ]
        },
        "sizes": {
          "type": "array",
          "description": "An array of image sizes",
          "items": {
            "type": "string"
          }
        },
        "template": {
          "description": "The path to the file, subsititute %size% into the path where the sizes should be inserted",
          "examples": ["controller://driver/DRIVER_FILE_NAME/icons/my_icon_%size%.png"],
          "type": "string"
        }
      },
      "required": ["id", "type", "sizes", "template"]
    }
  },
  "type": "array",
  "minItems": 0,
  "uniqueItems": true,
  "items": {
    "allOf": [
      {
        "$ref": "#/definitions/experienceicons"
      }
    ]
  }
}