{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for Control4 proxies",
  "type": "array",
  "minItems": 0,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "minimum": 5000,
        "maximum": 5999,
        "default": 5001
      },
      "primary": {
        "type": "boolean"
      },
      "name": {
        "type": "string"
      },
      "proxy": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "enum": [
              "amplifier",
              "aswitch",
              "avswitch",
              "blind",
              "blindV2",
              "cable",
              "camera",
              "contactsingle_motionsensor",
              "cd",
              "discchanger",
              "doorstation",
              "dvd",
              "fan",
              "ipod",
              "intercomproxy",
              "keypad_proxy",
              "light",
              "light_v2",
              "load_controller",
              "media_player",
              "media_service",
              "others",
              "plasma",
              "pool",
              "projector",
              "receiver",
              "relay",
              "satellite",
              "security",
              "securitypanel",
              "thermostat",
              "thermostatV2",
              "tuner",
              "tunerXM",
              "tv",
              "vcr",
              "contact",
              "uibutton"
            ]
          }
        ]
      },
      "small_image": {
        "type": "string"
      },
      "large_image": {
        "type": "string"
      },
      "image_source": {
        "type": "string",
        "enum": [
          "c4z",
          "url"
        ],
        "default": "c4z"
      }
    },
    "required": [
      "name",
      "proxy"
    ]
  }
}